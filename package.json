{
  "name": "natours",
  "version": "1.0.0",
  "description": "A mockup landing page for the Natours travel agency",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "sass:compile": "node-sass sass/main.scss css/style.css",
    "sass:watch": "node-sass sass/main.scss css/style.css -w",

    "stylelint:run": "stylelint '**/*{.css,.scss}'",
    "stylelint:fix": "stylelint '**/*{.css,.scss}' --fix"
  },
  "keywords": [
    "landing page"
  ],
  "author": "Dmytro Korzhov",
  "license": "ISC",
  "devDependencies": {
    "node-sass": "^9.0.0",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2"
  }
}
